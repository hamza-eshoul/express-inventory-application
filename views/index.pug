        a.navbar-brand(href='#') Navbar
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            li.nav-item
              a.nav-link(href='/carModels/categories_list') All Categories
            li.nav-item
              a.nav-link(href='/carModels/items_list') All Items
            li.nav-item
              a.nav-link(href='/carModels/category/create') Create Category 
            li.nav-item
              a.nav-link(href='/carModels/item/create') Create Item

         
          form.d-flex(role='search')
            input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success(type='submit')
              | Search
