doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Express-Inventory-Application
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')
  body.bg-tertiary-rgb
    // Navbar
    nav.navbar.dark.navbar-expand-lg.bg-dark.border-bottom.border-bottom-dark(data-bs-theme='dark')
      .container-fluid
        a.navbar-brand(href='/') Navbar
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            li.nav-item
              a.nav-link(href='/carModels/categories_list') All Categories
            li.nav-item
              a.nav-link(href='/carModels/items_list') All Items
            li.nav-item
              a.nav-link(href='/carModels/category/create') Create Category 
            li.nav-item
              a.nav-link(href='/carModels/item/create') Create Item
               
          form.d-flex(role='search')
            input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success(type='submit')
              | Search
    // Heading
    .container.my-4
      h1.text-center.border.border-secondary.p-2.rounded #{itemDetail.name}
    // Category Information Accordion
    .list-group(style='margin: 0 200px')
      a.list-group-item.list-group-item-action.active(aria-current='true')
        | The Item Name Is : #{itemDetail.name}
      a.list-group-item.list-group-item-action
        | The Item Description Is : #{itemDetail.description}
      a.list-group-item.list-group-item-action
        | The Item Category Is : #{itemDetail.category}
      a.list-group-item.list-group-item-action The Item Price Is : #{itemDetail.price}
      a.list-group-item.list-group-item-action
        | The Item Number In Stock Is: #{itemDetail.nbrInStock}

    .container.my-4.m-auto.text-center
      button.text-center.mx-3.p-2.rounded.btn.btn-primary 
        a.text-white.text-decoration-none(href=itemDetail.updateUrl) Update Item
      button.text-center.p-2.rounded.btn.btn-primary
        a.text-white.text-decoration-none(href=itemDetail.deleteUrl) Delete Item
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz' crossorigin='anonymous')
